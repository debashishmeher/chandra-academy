extend admin 

block adminContent 
    .receipt-history 
        table 
            tr 
                th Book no
                th Date
                th Monthly
                th Payable
                th Discount
                th Receipt
                th Balance
            each payment in payments
                tr 
                    td=payment.bookNo
                    td=payment.dateAt.toLocaleDateString()
                    td=payment.monthlypay
                    td=payment.payAmount
                    td=payment.discount
                    td=payment.receptAmount
                    td=payment.balance